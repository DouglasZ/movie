$('#movie_image_link').val("<%= @obj.src %>");
$('#movie_original_title').val("<%= @obj.originalTitle %>");

var url = "<%= @obj.src %>";
if( url ) {
    $('.preview-image').attr("src", url);
    $('.preview-image').show();
    $('.glyphicon-eye-close').hide();
} else {
    $('.glyphicon-eye-close').show();
    $('.preview-image').hide();
}
