$('#movie_image_link').val("<%= @obj.src %>");
$('#movie_name').val("<%= @obj.movie_name %>");
$('#movie_original_title').val("<%= @obj.original_title %>");
$('#movie_release_date').val("<%= @obj.release_date %>");
$('#movie_director').val("<%= @obj.director %>");
$('#movie_cast').val("<%= @obj.cast %>");
$('#movie_gender').val("<%= @obj.gender %>");
$('#movie_synopsis').val("<%= @obj.synopsis %>");

var url = "<%= @obj.src %>";
if( url ) {
    $('.preview-image').attr("src", url);
    $('.preview-image').show();
    $('.glyphicon-eye-close').hide();
} else {
    $('.glyphicon-eye-close').show();
    $('.preview-image').hide();
}
