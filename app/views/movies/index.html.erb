<div class="container">
  <div class="page-header">
    <div class="container-fluid display-flex">
      <h3>Lista de filmes</h3>
      <div class="container-button">
        <%= link_to 'Novo filme', new_movie_path, class:'btn btn-primary' %>
      </div>
    </div>
  </div>

  <div class="table-height">
    <table class="table table-striped table-bordered" cellspacing="0" width="100%" style="margin-top: 10px;">
      <thead>
      <tr>
        <th>Nome</th>
        <th width="15%" style="text-align: center;">Data lan√ßamento</th>
        <th width="10%" style="text-align: center;">Status</th>
        <th style="text-align: center; width: 110px;">Options</th>
      </tr>
      </thead>

      <tbody>
      <% @movies.each do |movie| %>
          <tr>
            <td>
              <%= link_to movie_path(movie) do %>
                  <%= movie.name %>
              <% end %>
            </td>
            <td>
              <%= link_to movie_path(movie) do %>
                  <%= movie.release_date %>
              <% end %>
            </td>
            <td>
              <%= link_to movie_path(movie) do %>
                  <%= movie.status %>
              <% end %>
            </td>
            <td align="center">
              <%= link_to edit_movie_path(movie), class:'btn btn-default' do %>
                  <span class="glyphicon glyphicon-pencil"></span>
              <% end %>
              <%= link_to movie_path(movie), class:'btn btn-default', method: :delete, data: { confirm: 'Are you sure?' } do %>
                  <span class="glyphicon glyphicon-trash"></span>
              <% end %>
            </td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
  <div class="display-flex center">
    <%= paginate @movies %>
  </div>
</div>